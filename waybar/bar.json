{

"layer": "top",
"modules-left": ["hyprland/workspaces"],
"modules-center": ["hyprland/window"],
"modules-right": ["wireplumber", "network", "bluetooth", "systemd-failed-units", "battery", "clock"],

"bluetooth": {
	"format-connected": " {device_alias}:{device_battery_percentage}%",
	"format": ""
},

"network": {
	"interval": 5,
	"format": "",
	"format-wifi": "📶 {essid}:{bandwidthTotalBytes}",
	"format-ethernet": "🌐 {bandwidthTotalBytes}"
},

"hyprland/window": {
    "max-length": 50,
	"seperate-outputs": true
},

"hyprland/workspaces": {
  "format": "{name}",
  "on-click": "activate",
  "sort-by-number": true
},

"battery": {
    "format": "{capacity}% {icon}",
    "format-icons": ["", "", "", "", ""]
},

"clock": {
	"interval": 1,
    "format": "🕛 {:%Y-%m-%d %H:%M:%S}"
},

"wireplumber": {
    "format": "{volume}%",
    "format-muted": "",
    "on-click": "helvum",
    "max-volume": 150,
    "scroll-step": 0.2
},

"systemd-failed-units": {
	"hide-on-ok": true,
	"format": "✗ {nr_failed}",
	"format-ok": "✓",
	"system": true,
	"user": true
}

}
